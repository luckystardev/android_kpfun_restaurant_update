<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="@dimen/tab_transparent_overlay_height">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/tab_transparent_light"
                android:startColor="@color/tab_transparent_dark" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/tab_line_bottom"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_line" />
        </shape>
    </item>
</layer-list>