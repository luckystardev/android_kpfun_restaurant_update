<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <!-- Common styles -->    
    <style name="ActivityBarStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#303030</item>
    </style>
    
    
    <!--  Buttons in the activity bar at the bottom of every page -->
    <style name="ActivityButtonStyle">
    	<item name="android:gravity">center</item> 
    	<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:layout_weight">1</item>
   		<item name="android:textSize">25dp</item>
   		<item name="android:textColor">#FFFFFF</item>
    </style>
    
    
    
    <!-- Temporary, for prototyping UI -->
    <style name="ActivityDebugLabelStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="SetTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/title_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="SetButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="SetButton_1">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="SetRegister">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="SetButtonLogin">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:typeface">sans</item>
    </style>
    

</resources>
